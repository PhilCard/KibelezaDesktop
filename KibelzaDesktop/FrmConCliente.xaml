        <TextBox x:Name="TxtEmail" HorizontalAlignment="Left" Height="37" Margin="145,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="526" FontSize="20" KeyDown="TxtEmail_KeyDown"/>
